<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 登录页面 -->
    <!-- 按钮 -->
    <style name="loginPageBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/loginFontSize</item>
        <item name="android:background">@color/red</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 编辑框 -->
    <style name="loginPageETStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/loginFontSize</item>
    </style>

    <!-- 文字 -->
    <style name="loginPageTVStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/loginFontSize</item>
    </style>

</resources>
